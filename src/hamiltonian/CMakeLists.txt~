add_library(HamiltonianFunctions  STATIC
				  append_connections.cpp
				  evolve_space.cpp
				  merge_states.cpp
				  output.cpp
				  runtime.cpp
				  core.cpp
				  grow_configuration_space.cpp
				  odeint_evolve.cpp
				  par_runtime.cpp
				  setup.cpp
				  )
get_filename_component(PARENT_DIR ../ ABSOLUTE)
target_include_directories(HamiltonianFunctions
				PUBLIC ${CMAKE_CURRENT_SOURCE_DIR}
				PUBLIC ${PARENT_DIR}/io_tools
				)


install(TARGETS HamiltonianFunctions DESINATION lib)
install(FILES hamiltonian.hpp DESTINATION include)

